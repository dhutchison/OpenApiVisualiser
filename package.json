{
  "name": "open-apivisualiser",
  "version": "0.0.2",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start-container": "ng serve --host $(ip -f inet addr show eth0 | grep -Po 'inet \\K[\\d.]+')",
    "build": "ng build",
    "build-deployment": "ng build --prod --output-path dist --base-href /OpenApiVisualiser/ && cp dist/index.html dist/404.html",
    "lint": "ng lint",
    "test": "ng test --codeCoverage=true",
    "test-headless": "nyc --silent ng test --watch=false --browsers=ChromeHeadless",
    "test-headless-container": "nyc --silent ng test --watch=false --browsers=ChromeHeadlessNoSandbox",
    "cy:run": "cypress run --headless --spec \"cypress/integration/*_spec.js\"",
    "cy:coverage:report": "nyc report --reporter=html --temp-dir=.nyc_output --report-dir=./coverage/cypress",
    "cy:open": "cypress open",
    "e2e": "concurrently \"ng serve\" \"wait-on http-get://localhost:4200 && npm run cy:run\" --kill-others --success first",
    "test:all": "run-s -n test-headless-container e2e",
    "posttest:all": "nyc report --reporter=lcov --report-dir=./coverage/combined/html",
    "sonar": "sonar-scanner -Dsonar.projectVersion=$(cat ./package.json | jq -r .version)"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^10.2.4",
    "@angular/cdk": "^10.2.7",
    "@angular/common": "^10.2.4",
    "@angular/compiler": "^10.2.4",
    "@angular/core": "^10.2.4",
    "@angular/forms": "^10.2.4",
    "@angular/material": "^10.2.7",
    "@angular/platform-browser": "^10.2.4",
    "@angular/platform-browser-dynamic": "^10.2.4",
    "@angular/router": "^10.2.4",
    "@loopback/openapi-v3-types": "^1.2.1",
    "@types/js-yaml": "^3.12.5",
    "commonmark": "^0.29.2",
    "core-js": "^2.6.11",
    "file-saver": "^2.0.2",
    "html-to-image": "^0.1.1",
    "js-yaml": "^3.14.0",
    "primeicons": "^2.0.0",
    "primeng": "^10.0.3",
    "rxjs": "^6.5.5",
    "tslib": "^2.0.0",
    "uuid": "^3.4.0",
    "zone.js": "^0.10.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.1002.1",
    "@angular/cli": "^10.2.1",
    "@angular/compiler-cli": "^10.2.4",
    "@angular/language-service": "^10.2.4",
    "@cypress/code-coverage": "^3.8.1",
    "@cypress/webpack-preprocessor": "^5.4.6",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/commonmark": "^0.27.4",
    "@types/file-saver": "^2.0.1",
    "@types/jasmine": "^2.8.17",
    "@types/jasminewd2": "^2.0.8",
    "@types/node": "^12.12.67",
    "codelyzer": "^5.2.2",
    "concurrently": "^5.3.0",
    "cypress": "^5.3.0",
    "husky": "^4.3.0",
    "istanbul-instrumenter-loader": "^3.0.1",
    "istanbul-lib-coverage": "^3.0.0",
    "istanbul-merge": "^1.1.1",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~5.0.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "karma-junit-reporter": "^2.0.1",
    "ngx-build-plus": "^10.1.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "protractor": "~7.0.0",
    "source-map-support": "^0.5.19",
    "ts-node": "^7.0.1",
    "tslint": "~6.1.0",
    "typescript": "~4.0.5",
    "wait-on": "^5.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
