{
  "name": "open-apivisualiser",
  "version": "0.0.5",
  "scripts": {
    "prepare": "husky install",
    "ng": "ng",
    "start": "ng serve",
    "start-container": "ng serve --host $(ip -f inet addr show eth0 | grep -Po 'inet \\K[\\d.]+')",
    "build": "ng build",
    "build-deployment": "ng build --configuration production --output-path dist --base-href /OpenApiVisualiser/ && cp dist/index.html dist/404.html",
    "lint": "ng lint",
    "test": "ng test --codeCoverage=true",
    "test-headless": "nyc --silent ng test --watch=false --browsers=ChromeHeadless",
    "test-headless-container": "nyc --silent ng test --watch=false --browsers=ChromeHeadlessNoSandbox",
    "cy:run": "cypress run --headless --spec \"cypress/integration/*_spec.js\"",
    "cy:coverage:report": "nyc report --reporter=html --temp-dir=.nyc_output --report-dir=./coverage/cypress",
    "cy:open": "cypress open",
    "e2e": "concurrently \"ng serve\" \"wait-on http-get://localhost:4200 && npm run cy:run\" --kill-others --success first",
    "test:all": "run-s -n test-headless-container e2e",
    "posttest:all": "nyc report --reporter=lcov --report-dir=./coverage/combined/html",
    "sonar": "sonar-scanner -Dsonar.projectVersion=$(cat ./package.json | jq -r .version)"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^13.3.9",
    "@angular/cdk": "^13.3.7",
    "@angular/common": "^13.3.9",
    "@angular/compiler": "^13.3.9",
    "@angular/core": "^13.3.9",
    "@angular/forms": "^13.3.9",
    "@angular/material": "^13.3.7",
    "@angular/platform-browser": "^13.3.9",
    "@angular/platform-browser-dynamic": "^13.3.9",
    "@angular/router": "^13.3.9",
    "@loopback/openapi-v3-types": "^1.2.1",
    "@types/js-yaml": "^3.12.5",
    "commonmark": "^0.30.0",
    "core-js": "^3.19.2",
    "file-saver": "^2.0.5",
    "html-to-image": "^1.9.0",
    "js-yaml": "^4.1.0",
    "primeicons": "^5.0.0",
    "primeng": "^13.4.0",
    "rxjs": "^6.6.3",
    "tslib": "^2.0.0",
    "uuid": "^8.3.2",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^13.3.6",
    "@angular-eslint/builder": "13.2.1",
    "@angular-eslint/eslint-plugin": "13.2.1",
    "@angular-eslint/eslint-plugin-template": "13.2.1",
    "@angular-eslint/schematics": "13.2.1",
    "@angular-eslint/template-parser": "13.2.1",
    "@angular/cli": "^13.3.6",
    "@angular/compiler-cli": "^13.3.9",
    "@angular/language-service": "^13.3.9",
    "@cypress/code-coverage": "^3.9.12",
    "@cypress/webpack-preprocessor": "^5.11.1",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@jsdevtools/coverage-istanbul-loader": "^3.0.5",
    "@types/commonmark": "^0.27.4",
    "@types/file-saver": "^2.0.5",
    "@types/jasmine": "~4.0.3",
    "@types/jasminewd2": "^2.0.8",
    "@types/node": "^14.14.14",
    "@typescript-eslint/eslint-plugin": "5.17.0",
    "@typescript-eslint/parser": "5.17.0",
    "concurrently": "^7.2.0",
    "cypress": "^9.6.1",
    "eslint": "^8.12.0",
    "eslint-plugin-import": "2.25.2",
    "eslint-plugin-jsdoc": "37.0.3",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "husky": "^8.0.1",
    "istanbul-lib-coverage": "^3.0.0",
    "istanbul-merge": "^1.1.1",
    "jasmine-core": "~4.1.1",
    "jasmine-spec-reporter": "~7.0.0",
    "karma": "~6.3.9",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "^2.0.3",
    "karma-jasmine": "~5.0.1",
    "karma-jasmine-html-reporter": "^1.5.0",
    "karma-junit-reporter": "^2.0.1",
    "ngx-build-plus": "^13.0.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "source-map-support": "^0.5.19",
    "ts-node": "^9.1.1",
    "typescript": "4.6.4",
    "wait-on": "^6.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}